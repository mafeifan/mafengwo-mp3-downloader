{
  "name": "mafengwo mp3 downloader",
  "version": "0.3",
  "manifest_version": 2,
  "homepage_url": "https://github.com/mafeifan",
  "description": "识别蚂蜂窝游记页面的MP3信息并下载",
  "icons": {
    "16":  "img/icon16.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    // "default_popup": "popup.html",
    "default_icon": {
      "16":  "img/icon16.png",
      "19":  "img/icon19.png",
      "38":  "img/icon38.png"
    }
  },
  "permissions": [
    "*://*.mafengwo.net/*", // https://developer.chrome.com/extensions/match_patterns
    "downloads",
    "webRequest",         // web请求
    "webRequestBlocking", // 阻塞式web请求
    "notifications",      // 通知
    "contextMenus",       // 右键菜单
    "tabs"                // 访问tabs
    // "http://*/*",      // 可以通过executeScript或者insertCSS访问的网站
    // "https://*/*"
  ],
  "background": {
    "scripts": [
      "js/jsmediatags.min.js", // https://github.com/aadsm/jsmediatags
      "js/background.js"
    ],
    "persistent": true
  }
}
